#!/usr/bin/env bash

PLATFORM="linux-x64"
VERSION="2026.0.202510141"
wget https://open-vsx.org/api/AdaCore/ada/${PLATFORM}/${VERSION}/file/AdaCore.ada-${VERSION}@${PLATFORM}.vsix -O als.zip
mkdir ada_language_server
unzip als.zip -d ada_language_server
rm als.zip
ln -s "${HOME}/dotfiles/ada_language_server/extension/linux/ada_language_server" ~/.local/bin/ada_language_server

